<% content_for(:after_js) do %>
  <script>
      $(document).ready(function() {
      $(".skill-container").on("click", function(e){
        //active tab
        $(this).toggleClass("selected");
        if ($(this).hasClass("selected")){
          $($(this).data('target')).prop("checked", true);
        } else {
          $($(this).data('target')).prop("checked", false);
        }
      });
    });
  </script>
<% end %>


<div class="container padded top">
  <div class="row">
    <div class="form col-xs-12 col-md-6 col-md-offset-3">
      <h2 class="text-center">Create your Horntrip</h2>
      <%= simple_form_for(@horntrip) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :title, required: true %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.input :description, required: true %>
          <%= f.input :address, required: true %>
          <%= f.input :price, required: true %>
          <%= f.input :starting_day, required: true, as: :string, input_html: { class: "datepicker" } %>
          <%= f.label :skills %>
          <div class="row">
            <div class="skills-container">
              <div class="skill-container <%='selected' if @horntrip.is_outside%>" data-target="#horntrip_is_outside">
                <span>
                  <p>Hunting</p>
                  <i class="fa fa-bullseye " aria-hidden="true"></i>
                </span>
              </div>
              <div class="skill-container <%='selected' if @horntrip.is_outside%>" data-target="#horntrip_is_dirty">
              <span>
                <p>Orientate</p>
                <i class="fa fa-compass" aria-hidden="true"></i>
              </span>
              </div>
              <div class="skill-container <%='selected' if @horntrip.is_outside%>" data-target="#horntrip_is_food">
              <span>
                <p>Swiming</p>
                <i class="fa fa-support" aria-hidden="true"></i>
              </span>
              </div>
            </div>
           </div>
          <%= f.input :is_outside, as: :hidden, required: false %>
          <%= f.input :is_dirty, as: :hidden, required: false  %>
          <%= f.input :is_food, as: :hidden, required: false %>
          <%= f.input :length, label: "Length (in number of days)", required: true %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Create your Horntrip", class:"btn btn-primary large_bottom_margin"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

