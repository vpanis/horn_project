<div class="padded-top">
  <div class="banner" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.2) 50%), url( <%= image_path 'mike_banner.png' %> );">

    <div class="container">
      <div class="row">

        <div class="banner-content">

          <div class="col-md-6 col-md-offset-6">
            <h1 class="banner-title"><strong>Are you sure to be wild ?</strong></h1>
          </div>

          <div class="col-md-5 col-md-offset-7">
            <div class="banner-text">
              <h2 class="banner-brand"><strong>HornHub</strong></h2>
              <p class="banner-tagline">The hotest experience of extreme tourism.</p>
            </div>
          </div>

          <div class="col-md-6 col-md-offset-6">
            <%= form_tag(horntrips_path, method: "get", class: "form-inline") do %>
              <div class="form-group banner-form-group">
                <%= text_field_tag("horntrip[q]", "", options = {placeholder: "Enter a location", class: "form-control"}) %>
              </div>
              <%= submit_tag("Search HornTrips !", options = {class: "btn btn-primary banner-cta"}) %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<h3 class="readme-header text-center">Daily Specials HornTrips !</h3>

<div class="container-fluid">
  <div class="row">

    <% @horntrips.last(3).each do |horntrip| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card home-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path set_horntrip_image(horntrip), crop: :scale %>');">
          <div class="card-description">
            <h2><%= horntrip.title %></h2>
            <p><%= horntrip.description %></p>
            <p><%= set_username(horntrip.user) %></p>
          </div>
          <%= cl_image_tag set_user_image(horntrip.user), class: "card-user avatar" %>
          <%= link_to "", horntrip_path(horntrip), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


